<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BorrarCampeonato">

    <TextView
        android:id="@+id/txt_borrarCampeonato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="145dp"
        android:text="@string/borrar_campeonato"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/sp_borrarCamp"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_borrarCampeonato"
        app:layout_constraintStart_toStartOf="@+id/txt_borrarCampeonato"
        app:layout_constraintTop_toBottomOf="@+id/txt_borrarCampeonato" />

    <Button
        android:id="@+id/btn_borrarCamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="134dp"
        android:text="@string/btn_borrar_campeonato"
        android:onClick="borrarCampeonato"
        app:layout_constraintEnd_toEndOf="@+id/sp_borrarCamp"
        app:layout_constraintStart_toStartOf="@+id/sp_borrarCamp"
        app:layout_constraintTop_toBottomOf="@+id/sp_borrarCamp" />
</androidx.constraintlayout.widget.ConstraintLayout>